<% include partials/header %>

<div class="container">
  <div class="jumbotron">
  <div class="display-3">New Blog</div>
</div>
<div class="container">
  <form action="/blogs" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="blog[title]" placeholder="title">
    </div>
    <div class="form-group">
      <label>Image</label>
      <input class="form-control" type="text" name="blog[image]" placeholder="image">
    </div>
    <div class="form-group">
      <label>Blog post</label>
      <textarea class="form-control" name="blog[body]" placeholder="start your blog post"></textarea>
    </div>
    <a href="/blogs" class="btn btn-secondary right">Back</a>
    <input class="btn btn-primary" type="submit">
  </form>
</div>
<% include partials/footer %>
