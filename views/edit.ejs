<% include partials/header %>

<div class="container">
  <div class="jumbotron">
  <div class="display-3">Edit <%= blog.title %></div>
</div>

  <form action="/blogs/<%= blog._id %>?_method=PUT" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="form-group">
      <label>Image</label>
      <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="form-group">
      <label>Blog post</label>
      <textarea class="form-control" name="blog[body]"><%= blog.body %></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Post</button>
  </form>
  <form action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
      <button class="btn btn-danger"type="submit" name="button">Delete</button>
  </form>
</div>
<% include partials/footer %>
